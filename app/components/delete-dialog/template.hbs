{{#if this.active}}
  <PaperDialog @fullscreen={{true}} @origin=".actions">
    <PaperToolbar>
      <div class="md-toolbar-tools">
        <h2>Delete Directory</h2>
        <span class="flex"></span>
        <PaperButton @iconButton={{true}} {{on "click" this.close}}><PaperIcon @icon="close"/></PaperButton>
      </div>
    </PaperToolbar>

    <PaperDialogContent>
      {{yield}}
    </PaperDialogContent>

    <PaperDialogActions class="layout-row">
      <span class="flex"></span>
      <PaperButton @primary={{true}} {{on "click" this.close}}>Cancel</PaperButton>
      <PaperButton @primary={{true}} {{on "click" this.deleteItem}}>Delete</PaperButton>
    </PaperDialogActions>
  </PaperDialog>
{{/if}}
