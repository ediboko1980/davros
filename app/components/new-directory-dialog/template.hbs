{{#if @active}}
  <PaperDialog @fullscreen={{true}} @origin=".actions">
    <PaperToolbar>
      <div class="md-toolbar-tools">
        <h2>New Directory</h2>
        <span class="flex"></span>
        <PaperButton @iconButton={{true}} @onClick={{this.close}}>
          <PaperIcon @icon="close"/>
        </PaperButton>
      </div>
    </PaperToolbar>

    <PaperForm @onSubmit={{fn this.create}} as |form|>
      <PaperDialogContent>
        <form.input @label="Name" @autofocus={{true}} @value={{this.directoryName}} @customValidations={{this.directoryValidation}} @onChange={{fn (mut this.directoryName)}} />
      </PaperDialogContent>

      <PaperDialogActions class="layout-row">
        <span class="flex"></span>
        <PaperButton @primary={{true}} @onClick={{fn this.close}}>Cancel</PaperButton>
        <form.submit-button @primary={{true}} @raised={{true}} @disabled={{form.isInvalid}}>
          Create
        </form.submit-button>
      </PaperDialogActions>
    </PaperForm>
  </PaperDialog>
{{/if}}
